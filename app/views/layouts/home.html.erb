<!DOCTYPE html>
<html>
  <head>
    <title>RandomQuotes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

   <link rel="stylesheet" href= "https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.css">
   <style>
      h1   {font-size: 30px; text-align: center}
      h2   {font-size: 25px}
      h3   {font-size: 20px}
      h4   {font-size: 15px}
      h5   {font-size: 12px}
      h6   {font-size: 8px}
      .all {display: grid;
            grid-template-columns: 300px 300px 300px;
            grid-template-rows: auto;
            padding: 10px;
            justify-content: center}
      .quotes {border: 1px solid;
              margin: 8px;
              padding: 10px;
              text-align: center;
              border-radius: .4rem}
      .authors {display: grid;
            grid-template-columns: 175px 175px 175px;
            grid-template-rows: auto;
            padding: 10px;
            justify-content: center;
            text-align: center;}
      .topics {display: grid;
            grid-template-columns: 175px 175px 175px;
            grid-template-rows: auto;
            padding: 10px;
            justify-content: center}

      .cancel {text-align: left}
   </style>
</head>

<body>

  <h5><center>
  <%= link_to "Home" , home_path %> |
  <%= link_to "Quotes" , quotes_path %> |
  <%= link_to "Authors", authors_path %> |
  <%= link_to "Topics", topics_path %> |
  <%= link_to "New Quote", new_quote_path %> |
  <%= link_to "Random Quote", random_quote_path %>
  <% if logged_in? %>
  <%= "| " %><%= link_to current_user.first_name + "'s Account", user_path(current_user)%> |
  <%= link_to "Logout", sessions_path, method: :delete %>
  <% end %>



 </center></h5><br/><br/>


 <% if flash[:errors] %>
 <ul>
   <% flash[:errors].each do |e| %>
       <li style="color: #beef  11*16 + 15*16 + 15*16 + 16*16 ;"><%= e %></li>
   <% end %>
 </ul>
<% end %>

    <%= yield %>


    <br/><br/><br/><br/><br/><br/><h6><center><%= link_to "New Author", new_author_path %> |
    <%= link_to "New Source", new_source_path %></h6></center>
  </body>
</html>
